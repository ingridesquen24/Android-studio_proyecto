<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#0997F4">
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#009AFE">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mandalas"></ImageView>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="201dp"
                        android:layout_height="153dp"
                        android:text="MANDALAS "
                        tools:textSize="20sp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#009AFE">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="right"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/audiolibro"
                        >
                    </ImageView>

                    <TextView
                        android:id="@+id/AUDIOLIBRO"
                        android:layout_width="186dp"
                        android:layout_height="48dp"
                        android:text="AUDIOLIBRO"
                        tools:textSize="20sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#009AFE">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/laberinto"
                    >
                </ImageView>

                    <TextView
                        android:id="@+id/LABERINTO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LABERINTO"
                        tools:textSize="20sp" />
                </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp"
                     app:cardBackgroundColor="#009AFE">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="right"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ejercicios"
                        >
                    </ImageView>

                     <TextView
                         android:id="@+id/EJERCICIOS"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="EJERCICIOS"
                         tools:textSize="20sp" />
                 </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#009AFE">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/musica"></ImageView>

                    <TextView
                        android:id="@+id/MUSICA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MUSICA"
                        tools:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_cerrarsesionmenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#009AFC"
                    android:text="CERRAR SESION"
                    android:textSize="20sp"></Button>



            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>